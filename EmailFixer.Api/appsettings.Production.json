{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "EmailFixer": "Information"
    },
    "Console": {
      "FormatterName": "json",
      "FormatterOptions": {
        "SingleLine": true,
        "IncludeScopes": true,
        "TimestampFormat": "yyyy-MM-dd HH:mm:ss ",
        "UseUtcTimestamp": true,
        "JsonWriterOptions": {
          "Indented": false
        }
      }
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=/cloudsql/emailfixer-prod:us-central1:emailfixer-db;Database=emailfixer;Username=appuser;Password=PLACEHOLDER"
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:8080"
      }
    }
  },
  "Cors": {
    "AllowedOrigins": [
      "https://storage.googleapis.com",
      "https://emailfixer.com",
      "https://www.emailfixer.com"
    ],
    "AllowedMethods": [
      "GET",
      "POST",
      "PUT",
      "DELETE",
      "OPTIONS",
      "PATCH"
    ],
    "AllowedHeaders": [
      "Content-Type",
      "Authorization",
      "X-Requested-With",
      "Accept"
    ],
    "AllowCredentials": true,
    "MaxAge": 3600
  },
  "Paddle": {
    "ApiKey": "PLACEHOLDER",
    "VendorId": "PLACEHOLDER",
    "WebhookSecret": "PLACEHOLDER",
    "Environment": "production",
    "BaseUrl": "https://api.paddle.com"
  },
  "Database": {
    "CommandTimeout": 30,
    "EnableSensitiveDataLogging": false,
    "EnableDetailedErrors": false,
    "MaxRetryCount": 3,
    "MaxRetryDelay": 30
  },
  "RateLimiting": {
    "EnableRateLimiting": true,
    "PermitLimit": 100,
    "WindowSeconds": 60,
    "QueueLimit": 10
  },
  "Authentication": {
    "Jwt": {
      "Issuer": "https://api.emailfixer.com",
      "Audience": "https://emailfixer.com",
      "SecretKey": "PLACEHOLDER",
      "ExpirationMinutes": 60,
      "RefreshTokenExpirationDays": 30
    }
  },
  "Email": {
    "MaxBatchSize": 100,
    "ProcessingTimeoutSeconds": 300,
    "ValidationRules": {
      "EnableSpamCheck": true,
      "EnableDisposableCheck": true,
      "EnableMxCheck": true,
      "EnableSmtpCheck": false
    }
  },
  "Caching": {
    "EnableDistributedCache": false,
    "DefaultExpirationMinutes": 60,
    "SlidingExpirationMinutes": 30
  },
  "Monitoring": {
    "EnableHealthChecks": true,
    "HealthCheckPath": "/health",
    "EnableMetrics": true,
    "EnableTracing": true
  },
  "Security": {
    "EnableHttpsRedirection": false,
    "EnableHsts": false,
    "EnableCors": true,
    "RequireHttpsMetadata": false
  },
  "Swagger": {
    "Enabled": true,
    "Title": "Email Fixer API",
    "Version": "v1",
    "Description": "API for email validation and processing",
    "EnableAuthorization": true
  }
}
