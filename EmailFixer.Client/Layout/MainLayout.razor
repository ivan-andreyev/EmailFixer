@inherits LayoutComponentBase
@inject IAuthService AuthService
@inject NavigationManager NavigationManager

<div class="page">
    <!-- Top Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="/">
                <i class="fas fa-envelope-open-text me-2"></i> Email Fixer
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link @IsActiveRoute("/")" href="/">
                            <i class="fas fa-home me-1"></i> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @IsActiveRoute("/history")" href="/history">
                            <i class="fas fa-history me-1"></i> History
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @IsActiveRoute("/purchase")" href="/purchase">
                            <i class="fas fa-credit-card me-1"></i> Purchase Credits
                        </a>
                    </li>
                </ul>
                <AuthorizeView>
                    <Authorized>
                        <div class="nav-divider ms-3"></div>
                        <div class="navbar-text ms-3">
                            @if (CurrentUser != null)
                            {
                                <span class="badge bg-success me-2">
                                    <i class="fas fa-coins me-1"></i> @CurrentUser.CreditsAvailable
                                </span>
                                <span class="text-light small me-3">@CurrentUser.Email</span>
                            }
                            <button class="btn btn-sm btn-outline-light" @onclick="HandleLogout">
                                <i class="fas fa-sign-out-alt me-1"></i> Logout
                            </button>
                        </div>
                    </Authorized>
                    <NotAuthorized>
                        <div class="ms-3">
                            <a class="btn btn-sm btn-primary" href="/login">
                                <i class="fas fa-sign-in-alt me-1"></i> Login
                            </a>
                        </div>
                    </NotAuthorized>
                </AuthorizeView>
            </div>
        </div>
    </nav>

    <!-- Main Content Area -->
    <main class="main-content flex-grow-1">
        <article class="content">
            @Body
        </article>
    </main>

    <!-- Footer -->
    <footer class="footer mt-auto py-3 bg-light border-top">
        <div class="container text-center">
            <span class="text-muted small">Email Fixer &copy; 2025 | Professional Email Validation</span>
        </div>
    </footer>
</div>

@code {
    private UserAuthDto? CurrentUser;

    protected override async Task OnInitializedAsync()
    {
        CurrentUser = await AuthService.GetCurrentUserAsync();
    }

    private async Task HandleLogout()
    {
        await AuthService.LogoutAsync();
        NavigationManager.NavigateTo("/login", forceLoad: true);
    }

    private string IsActiveRoute(string route)
    {
        var uri = NavigationManager.ToAbsoluteUri(NavigationManager.Uri);
        var path = uri.AbsolutePath;

        if (route == "/" && path == "/")
            return "active";

        if (route != "/" && path.StartsWith(route))
            return "active";

        return string.Empty;
    }
}
