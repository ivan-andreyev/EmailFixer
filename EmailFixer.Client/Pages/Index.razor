@page "/"
@implements IDisposable
@inject IEmailValidationService ValidationService
@inject IUserService UserService
@inject INotificationService NotificationService
@inject IJSRuntime JSRuntime
@inject DebounceService DebounceService

<PageTitle>Email Fixer - Validate Email Addresses</PageTitle>

<div class="container-fluid mt-4 email-validator-container">
    <div class="row g-4">
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-envelope-circle-check"></i> Email Validator</h5>
                </div>
                <div class="card-body d-flex flex-column">
                    <div class="mb-3">
                        <label class="form-label">Enter email addresses (one per line):</label>
                        <textarea @bind="EmailInput" @oninput="OnEmailInputChangedDebounced"
                                  class="form-control font-monospace"
                                  rows="12"
                                  placeholder="john@example.com&#10;jane@company.org&#10;info@website.net"
                                  disabled="@IsValidating">
                        </textarea>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <span class="badge bg-info fs-6">
                                <i class="fas fa-list"></i> @EmailCount emails
                            </span>
                            @if (CurrentUser != null)
                            {
                                <span class="badge bg-success fs-6 ms-2">
                                    <i class="fas fa-coins"></i> @CurrentUser.CreditsAvailable credits
                                </span>
                            }
                        </div>
                        <div>
                            <button class="btn btn-secondary me-2" @onclick="ClearAll" disabled="@IsValidating">
                                <i class="fas fa-eraser"></i> Clear
                            </button>
                            <button class="btn btn-primary" @onclick="ValidateEmails"
                                    disabled="@(IsValidating || EmailCount == 0 || !HasSufficientCredits)">
                                @if (IsValidating)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                    <span>Validating...</span>
                                }
                                else
                                {
                                    <i class="fas fa-check-circle"></i>
                                    <span>Validate</span>
                                }
                            </button>
                        </div>
                    </div>

                    @if (!HasSufficientCredits && EmailCount > 0)
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i>
                            You need @EmailCount credits but only have @(CurrentUser?.CreditsAvailable ?? 0).
                            <a href="/purchase" class="alert-link">Purchase more credits</a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                @if (ValidationResults.Any())
                {
                    <div class="card-header bg-secondary text-white">
                        <h5 class="mb-0"><i class="fas fa-clipboard-check"></i> Validation Results</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <button class="btn btn-sm btn-outline-success me-2" @onclick="ExportValid">
                                <i class="fas fa-download"></i> Export Valid
                            </button>
                            <button class="btn btn-sm btn-outline-danger me-2" @onclick="ExportInvalid">
                                <i class="fas fa-download"></i> Export Invalid
                            </button>
                            <button class="btn btn-sm btn-outline-primary" @onclick="ExportAll">
                                <i class="fas fa-file-csv"></i> Export All
                            </button>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Email</th>
                                        <th>Status</th>
                                        <th>Message</th>
                                        <th>Suggestion</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var result in ValidationResults)
                                    {
                                        <tr class="@GetRowClass(result.Status.ToString())">
                                            <td class="font-monospace">@result.Email</td>
                                            <td>
                                                <span class="badge @GetStatusBadgeClass(result.Status.ToString())">
                                                    @result.Status
                                                </span>
                                            </td>
                                            <td>@result.Message</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(result.SuggestedEmail))
                                                {
                                                    <button class="btn btn-sm btn-link"
                                                            @onclick="() => ShowSuggestion(result)">
                                                        <i class="fas fa-lightbulb"></i> @result.SuggestedEmail
                                                    </button>
                                                }
                                            </td>
                                            <td>
                                                <button class="btn btn-sm btn-outline-secondary"
                                                        @onclick="() => CopyEmail(result.Email)">
                                                    <i class="fas fa-copy"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="mt-3">
                            <div class="row text-center">
                                <div class="col">
                                    <h5 class="text-success">@ValidCount Valid</h5>
                                </div>
                                <div class="col">
                                    <h5 class="text-danger">@InvalidCount Invalid</h5>
                                </div>
                                <div class="col">
                                    <h5 class="text-warning">@SuspiciousCount Suspicious</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="card-body d-flex align-items-center justify-content-center" style="min-height: 400px;">
                        <div class="text-center text-muted">
                            <i class="fas fa-inbox" style="font-size: 3rem; opacity: 0.3; display: block; margin-bottom: 1rem;"></i>
                            <h5>No results yet</h5>
                            <p class="mb-0">Enter email addresses and click Validate to see results here</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@if (ShowSuggestionModal && SelectedResult != null)
{
    <SuggestionModal Result="@SelectedResult"
                     OnAccept="AcceptSuggestion"
                     OnReject="RejectSuggestion" />
}

@code {
    private string EmailInput = string.Empty;
    private List<EmailCheckModel> ValidationResults = new();
    private bool IsValidating = false;
    private UserModel? CurrentUser = null;
    private EmailCheckModel? SelectedResult = null;
    private bool ShowSuggestionModal = false;

    // CACHE: Pre-computed email list to avoid O(n) recalculations on every render
    private List<string> _cachedEmails = new();
    private int _cachedEmailCount = 0;
    private int _emailInputHash = 0;

    // CACHE: Pre-computed status counts
    private int _validCount = 0;
    private int _invalidCount = 0;
    private int _suspiciousCount = 0;

    /// <summary>
    /// Get cached email count - O(1) instead of O(n)
    /// </summary>
    private int EmailCount
    {
        get
        {
            int currentHash = EmailInput.GetHashCode();
            if (currentHash != _emailInputHash)
            {
                // Recompute cache only when input changes
                _cachedEmails = EmailInput
                    .Split('\n', StringSplitOptions.RemoveEmptyEntries)
                    .Select(e => e.Trim())
                    .Where(e => !string.IsNullOrWhiteSpace(e))
                    .ToList();

                _cachedEmailCount = _cachedEmails.Count;
                _emailInputHash = currentHash;
            }

            return _cachedEmailCount;
        }
    }

    private bool HasSufficientCredits => CurrentUser?.CreditsAvailable >= EmailCount;

    /// <summary>
    /// Status counts from cache, updated after validation
    /// </summary>
    private int ValidCount => _validCount;
    private int InvalidCount => _invalidCount;
    private int SuspiciousCount => _suspiciousCount;

    protected override async Task OnInitializedAsync()
    {
        CurrentUser = await UserService.GetCurrentUserAsync();
        if (CurrentUser == null)
        {
            // Create guest user
            CurrentUser = await UserService.CreateGuestUserAsync();
        }
    }

    /// <summary>
    /// Handle input with debouncing - no rapid recalculations
    /// </summary>
    private void OnEmailInputChangedDebounced(ChangeEventArgs e)
    {
        EmailInput = e.Value?.ToString() ?? string.Empty;

        // Debounce expensive operations (300ms delay)
        DebounceService.Debounce("email-input", () =>
        {
            // This won't trigger re-render until user stops typing
            StateHasChanged();
        }, 300);
    }

    /// <summary>
    /// Original method (kept for compatibility)
    /// </summary>
    private void OnEmailInputChanged(ChangeEventArgs e)
    {
        OnEmailInputChangedDebounced(e);
    }

    private async Task ValidateEmails()
    {
        if (CurrentUser == null)
        {
            return;
        }

        IsValidating = true;
        ValidationResults.Clear();

        try
        {
            // Use cached emails from EmailCount property
            var emails = _cachedEmails.Distinct().ToList();

            if (emails.Count == 1)
            {
                var result = await ValidationService.ValidateSingleAsync(emails[0], CurrentUser.Id);
                if (result != null)
                {
                    ValidationResults.Add(result);
                    // Refresh user to get updated credits
                    CurrentUser = await UserService.GetUserByIdAsync(CurrentUser.Id);
                }
                else
                {
                    await NotificationService.ShowError("Validation failed. Please check your credits.");
                }
            }
            else
            {
                var result = await ValidationService.ValidateBatchAsync(emails, CurrentUser.Id);
                if (result != null)
                {
                    ValidationResults.AddRange(result.Results);
                    // Refresh user to get updated credits
                    CurrentUser = await UserService.GetUserByIdAsync(CurrentUser.Id);
                }
                else
                {
                    await NotificationService.ShowError("Batch validation failed. Please check your credits.");
                }
            }

            if (ValidationResults.Any())
            {
                // Update cached counts - O(n) scan but only after validation, not every render
                _validCount = ValidationResults.Count(r => r.Status == EmailValidationStatus.Valid);
                _invalidCount = ValidationResults.Count(r => r.Status == EmailValidationStatus.Invalid);
                _suspiciousCount = ValidationResults.Count(r => r.Status == EmailValidationStatus.Suspicious);

                await NotificationService.ShowSuccess($"Validated {ValidationResults.Count} email(s)");
            }
        }
        catch (Exception ex)
        {
            await NotificationService.ShowError($"Error: {ex.Message}");
        }
        finally
        {
            IsValidating = false;
        }
    }

    private void ClearAll()
    {
        EmailInput = string.Empty;
        ValidationResults.Clear();
    }

    private async Task CopyEmail(string email)
    {
        await JSRuntime.InvokeVoidAsync("navigator.clipboard.writeText", email);
        await NotificationService.ShowSuccess($"Copied {email}");
    }

    private void ShowSuggestion(EmailCheckModel result)
    {
        SelectedResult = result;
        ShowSuggestionModal = true;
    }

    private void AcceptSuggestion(string suggestion)
    {
        if (SelectedResult != null)
        {
            // Replace in input
            EmailInput = EmailInput.Replace(SelectedResult.Email, suggestion);
        }
        ShowSuggestionModal = false;
        SelectedResult = null;
    }

    private void RejectSuggestion()
    {
        ShowSuggestionModal = false;
        SelectedResult = null;
    }

    private async Task ExportValid()
    {
        var validEmails = ValidationResults
            .Where(r => r.Status == EmailValidationStatus.Valid)
            .Select(r => r.Email);
        await ExportToCSV(validEmails, "valid_emails.csv");
    }

    private async Task ExportInvalid()
    {
        var invalidEmails = ValidationResults
            .Where(r => r.Status == EmailValidationStatus.Invalid)
            .Select(r => r.Email);
        await ExportToCSV(invalidEmails, "invalid_emails.csv");
    }

    private async Task ExportAll()
    {
        var csv = "Email,Status,Message,Suggestion\n";
        foreach (var result in ValidationResults)
        {
            // Escape CSV fields properly
            var emailField = EscapeCsvField(result.Email);
            var statusField = EscapeCsvField(result.Status.ToString());
            var messageField = EscapeCsvField(result.Message ?? string.Empty);
            var suggestionField = EscapeCsvField(result.SuggestedEmail ?? string.Empty);

            csv += $"{emailField},{statusField},{messageField},{suggestionField}\n";
        }
        await ExportToCSV("all_results.csv", csv);
    }

    private async Task ExportToCSV(IEnumerable<string> emails, string filename)
    {
        var csv = string.Join("\n", emails.Select(e => EscapeCsvField(e)));
        await ExportToCSV(filename, csv);
    }

    private async Task ExportToCSV(string filename, string csv)
    {
        // Use safe JS interop instead of eval()
        var success = await JSRuntime.InvokeAsync<bool>("exportToCSV", csv, filename);
        if (!success)
        {
            await NotificationService.ShowError("Failed to export file. Please try again.");
        }
        else
        {
            await NotificationService.ShowSuccess($"Exported to {filename}");
        }
    }

    /// <summary>
    /// Properly escape CSV fields to prevent injection
    /// </summary>
    private static string EscapeCsvField(string field)
    {
        if (string.IsNullOrEmpty(field))
            return string.Empty;

        // If field contains comma, quote, or newline, wrap in quotes and escape inner quotes
        char quote = '"';
        if (field.Contains(',') || field.Contains(quote) || field.Contains('\n'))
        {
            var escaped = field.Replace(quote.ToString(), new string(quote, 2));
            return quote + escaped + quote;
        }

        return field;
    }

    private string GetRowClass(string status) => status switch
    {
        "Valid" => "table-success",
        "Invalid" => "table-danger",
        "Suspicious" => "table-warning",
        _ => ""
    };

    private string GetStatusBadgeClass(string status) => status switch
    {
        "Valid" => "bg-success",
        "Invalid" => "bg-danger",
        "Suspicious" => "bg-warning",
        _ => "bg-secondary"
    };

    public void Dispose()
    {
        // Clean up debounce timers
        DebounceService.Cancel("email-input");
    }
}
